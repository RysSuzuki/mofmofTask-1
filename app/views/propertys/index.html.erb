<h1>物件一覧</h1>

<% @property.each do | property | %>
　　<table>
     <tr class="title">
         <td class="style_name">物件</td>
         <td class="style_price">賃料</td>
         <td class="style_address">住所</td>
         <td class="style_age">築年数</td>
         <td class="style_remarks">備考</td>
     </tr>
     <tr>

        <td class="style_name"><%= property.name %></td>
        <td class="style_price"><%= property.price %>円</td>
        <td class="style_address"><%= property.address %></td>
        <td class="style_age"><%= property.age %>年</td>
        <td class="style_remarks"><%= property.remarks %></td>
        <td class="link"><%= link_to '詳細', property %></td>
        <td class="link"><%= link_to '編集', edit_property_path(property) %></td>
        <td class="link"><%= link_to '削除', property, method: :delete %></td>
      </tr>
    </table>
<% end %>
<%= link_to '物件登録', new_property_path %>
